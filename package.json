{
	"name": "vscode-languageclient-lua",
	"description": "Lua LSP Client for VSCode",
	"author": "木木田",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/YT315/vscode-languageclient-lua"
	},
	"publisher": "木木田",
	"categories": [],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "lua",
				"extensions": [
					".lua"
				]
			}
		],
		"commands": [
			{
				"command": "lualanguageServer.startStreaming",
				"title": "Start Stream Logs into luaLanguageServer.port"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Client configuration",
			"properties": {
				"luaLanguageServer.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"luaLanguageServer.port": {
					"type": "number",
					"default": 7000,
					"scope": "window",
					"description": "The WebSocket port to stream LSP log data into."
				},
				"luaLanguageServer.trace.server": {
					"type": "window",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VSCode and the luaLanguageServer service."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3"
	}
}
